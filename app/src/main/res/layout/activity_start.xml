<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_activity_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#22ffffff"
        android:fontFamily="@font/maplestory_bold"
        android:text="TFlight"
        android:textAlignment="center"
        android:textColor="#444444"
        android:textSize="50sp" />

    <ImageButton
        android:id="@+id/startBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button_shape"
        android:backgroundTint="@color/black"
        app:srcCompat="@drawable/ship_0000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="70dp"
            android:stretchColumns="*">

            <TableRow android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/ship_001"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ship_0000" />

                <ImageView
                    android:id="@+id/ship_002"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ship_0001" />

                <ImageView
                    android:id="@+id/ship_003"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ship_0002" />


                <ImageView
                    android:id="@+id/ship_004"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ship_0003" />

            </TableRow>

            <TableRow android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/ship_005"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ship_0004" />

                <ImageView
                    android:id="@+id/ship_006"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ship_0005" />

                <ImageView
                    android:id="@+id/ship_007"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ship_0006" />

                <ImageView
                    android:id="@+id/ship_008"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ship_0007" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/guideTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/maplestory_bold"
            android:text="캐릭터를 선택하세요."
            android:textSize="30sp" />
    </LinearLayout>
</FrameLayout>